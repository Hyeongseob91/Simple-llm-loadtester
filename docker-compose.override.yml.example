# Docker Compose Override Example
# 로컬 개발 환경에 맞게 설정을 커스터마이징합니다.
#
# 사용법:
#   cp docker-compose.override.yml.example docker-compose.override.yml
#   # 환경에 맞게 수정 후 사용
#
# docker-compose.override.yml은 .gitignore에 포함되어 있어 git에 추적되지 않습니다.

services:
  api:
    extra_hosts:
      # 방법 1: Docker Desktop (Mac/Windows) - host-gateway 사용
      - "host.docker.internal:host-gateway"

      # 방법 2: Linux - 호스트의 실제 IP 주소 사용
      # - "host.docker.internal:192.168.x.x"

    # 환경변수 추가 예시
    # environment:
    #   - API_KEY=your-secret-key
    #   - CORS_ORIGINS=https://your-domain.com

  # web:
  #   environment:
  #     - API_URL=http://api:8085
